<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundhome"
    tools:context=".view.activity.login.LoginActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintBottom_toTopOf="parent">


        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:background="#fff"
            app:cardCornerRadius="@dimen/_10sdp"
            app:contentPadding="15dp"
            >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/logo"
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_80sdp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/logohome" />

                <TextView
                    android:id="@+id/label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/logo"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:text="RIVAL" />

                <EditText
                    android:id="@+id/username"
                    android:layout_width="@dimen/_300sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_below="@id/label"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/textviewback"
                    android:hint="Username"
                    android:inputType="textEmailAddress"
                    android:textColorHint="#8e8b8b" />
                <!--            <com.wang.avi.AVLoadingIndicatorView-->
                <!--                android:id="@+id/avi"-->
                <!--                android:layout_width="wrap_content"-->
                <!--                android:layout_height="wrap_content"-->
                <!--                style="@style/AVLoadingIndicatorView.Large"-->
                <!--                android:visibility="invisible"-->
                <!--                android:layout_centerInParent="true"-->
                <!--                android:layout_marginTop="@dimen/_150sdp"-->
                <!--                app:indicatorName="BallClipRotatePulseIndicator"-->
                <!--                app:indicatorColor="#0cd0ea"-->
                <!--                />-->

                <EditText
                    android:id="@+id/password"
                    android:layout_width="@dimen/_300sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_below="@id/username"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/textviewback"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:textColorHint="#8e8b8b" />

                <Button
                    android:id="@+id/btn_login"
                    android:layout_width="@dimen/_300sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_below="@id/password"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="#f58c03"
                    android:text="Login"
                    android:textColor="#fff" />

                <TextView
                    android:id="@+id/text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/btn_login"
                    android:layout_marginLeft="@dimen/_43sdp"
                    android:text="Belum punya akun?"
                    android:textColor="#000" />

                <TextView
                    android:id="@+id/textRegister"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/btn_login"
                    android:layout_toRightOf="@id/text1"
                    android:text="daftar disni"
                    android:textColor="#034bf2" />

                <TextView
                    android:id="@+id/lupaPassword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/text1"
                    android:layout_marginLeft="@dimen/_43sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="Lupa Password"
                    android:textColor="#034bf2" />


            </RelativeLayout>


        </androidx.cardview.widget.CardView>

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>